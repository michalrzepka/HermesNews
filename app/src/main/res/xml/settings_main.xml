<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">

    <EditTextPreference
        android:defaultValue="@string/settings_query_default"
        android:inputType="text"
        android:key="@string/settings_query_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_query_label"/>

    <EditTextPreference
        android:defaultValue="@string/settings_size_default"
        android:inputType="number"
        android:key="@string/settings_size_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_size_label" />

</PreferenceScreen>